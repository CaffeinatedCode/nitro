{
  "name": "Nitro",
  "description": "Get stuff done with Nitro.",
  "version": "2.0",
  "manifest_version": 2,
  "offline_enabled": true,
  "app": {
    "launch": {
      "local_path": "public/index.html"
    }
  },
  "permissions": [
    "cookies",
    "unlimitedStorage",
    "http://app.nitrotasks.com/"
  ],
  "icons": {
    "256": "public/img/icon.png"
  }
}
