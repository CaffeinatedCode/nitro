{
  "name": "nitrotasks",
  "version": "3.0.0-beta.1",
  "description": "The beautiful way to get things done.",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --progress --colors --mode production --display-optimization-bailout && npm run inject-scripts",
    "watch": "webpack-dev-server --mode development",
    "clean": "rm -rf dist/generated/*",
    "test": "cross-env NODE_ENV=test nyc mocha nitro.sdk.test/index.js && npm run build",
    "test:fast": "cross-env NODE_ENV=test mocha nitro.sdk.test/index.js --require @babel/register",
    "prepublishOnly": "npm run clean && npm run build",
    "flow": "flow",
    "prettier": "prettier",
    "inject-scripts": "node build-scripts/inject-scripts.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nitrotasks/nitro.git"
  },
  "author": "",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/nitrotasks/nitro/issues"
  },
  "homepage": "https://nitrotasks.com",
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": false,
    "reporter": [
      "lcov",
      "text",
      "html"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.0",
    "assets-webpack-plugin": "^3.9.10",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-istanbul": "^5.1.2",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "fake-indexeddb": "^2.1.0",
    "file-loader": "^3.0.1",
    "flow-bin": "^0.97.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "isomorphic-fetch": "^2.2.1",
    "mini-css-extract-plugin": "^0.6.0",
    "mocha": "^6.1.4",
    "null-loader": "^0.1.1",
    "nyc": "^14.0.0",
    "offline-plugin": "^5.0.6",
    "prettier": "^1.17.0",
    "resolve-url-loader": "^3.1.0",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.3.1"
  },
  "dependencies": {
    "auth0-js": "^9.10.2",
    "babel-plugin-react-native-web": "^0.11.2",
    "idb-keyval": "^3.2.0",
    "intersection-observer": "^0.5.1",
    "mousetrap": "^1.6.3",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-beautiful-dnd": "^11.0.0",
    "react-day-picker": "^7.3.0",
    "react-dom": "^16.8.6",
    "react-native-web": "^0.11.2",
    "react-router-dom": "^5.0.0",
    "smoothscroll-polyfill": "^0.4.4",
    "webpack-bundle-analyzer": "^3.3.2"
  }
}
