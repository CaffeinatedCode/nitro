@import './mixin'

body
  font-family: 'Helvetica Neue'
  margin: 50px
  width: 400px

header
  position: fixed
  top: 0
  left: 0
  right: 0
  height: 39px
  border-bottom: 1px #ddd solid

  h1
    margin: 0 0 0 20px
    line-height: 40px
    font-size: 20px


// LISTS
.lists
  position: fixed
  top: 40px
  bottom: 0
  left: 0
  width: 229px
  border-right: 1px #ddd solid
  padding: 20px
  border-box()

  input
    width: 100%
    line-height: 20px
    font-size: 14px
    padding: 5px 10px
    border-box()
    border: 1px #ddd solid
    margin-top: 20px

    &:focus
      outline: none
      border-color: #08c

  ul
    padding: 0
    margin: 0
    border: 1px #ddd solid
    border-bottom: none

  .list
    display: block
    padding: 10px
    border-bottom: 1px #ddd solid
    font-size: 14px
    line-height: 16px
    cursor: default
    overflow: auto

    &.all
      border: 1px #ddd solid
      border-bottom: none

    &:hover
      background: #fafafa

    &.active
      font-weight: bold

    &.ui-state-active
      background: #eee

    .name
      float: left
      width: 137px

    .count
      float: right
      text-align: center
      width: 28px

// Tasks
.tasks
  position: fixed
  top: 40px
  bottom: 0
  right: 0
  left: 230px
  padding: 20px
  overflow: auto

  h2
    margin-top: 0
    padding-bottom: 5px
    margin-bottom: 10px
    border-bottom: 1px #eee solid

  input.newTask
    width: 100%
    line-height: 20px
    font-size: 14px
    padding: 5px 10px
    border-box()
    border: 1px #ddd solid
    margin-bottom: 20px

    &:focus
      outline: none
      border-color: #08c

  ul
    padding: 0
    margin: 0

    li
      display: block
      position: relative
      padding: 10px
      border: 1px #ddd solid
      margin-bottom: -1px
      font-size: 14px

      &:hover
        background: #fafafa

        .show
          .delete
            display: block

      &.completed
        text-decoration: line-through
        color: #666

        .toggle
          background: #bbb
          border-color: #bbb

      &.edit
        outline: 1px #08c solid
        border: none
        margin-bottom: 1px
        background: #fff
        .edit
          display: block
        .show
          display: none

      &.sep
        border: none
        &:hover
          background: none

      .toggle
        display: block
        width: 10px
        height: 10px
        border: 1px #ddd solid
        margin: 2px 7px 0 0
        float: left

        &:hover, &:active
          border-color: #bbb

      &.p3, &.p2, &.p1
        &:before
          content: ""
          display: block
          position: absolute
          top: -1px
          bottom: -1px
          left: -1px
          width: 5px

      &.p3:before
        background: #e15556

      &.p2:before
        background: #9ecf6a

      &.p1:before
        background: #1bc2f7

      .show
        .name
          cursor: default

        .delete
          float: right
          display: none

      .edit
        display: none
        padding-left: 19px

        input
          background: transparent
          border: none
          font-size: 14px
          width: 100%
          padding: 0
          margin: 0
          font-family: "Helvetica Neue"

          &:focus
            outline: none

.helper
  display: inline-block
  min-height: 27px
  min-width: 100px
  line-height: 27px
  padding: 5px 10px
  background: rgba(#fff, 0.9)
  border: 1px #ddd solid
  box-shadow: 0 1px 5px rgba(0,0,0,0.1)
  font-size: 14px
  cursor: default
